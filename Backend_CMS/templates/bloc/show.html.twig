{% extends 'base.html.twig' %}

{% block title %}Bloc{% endblock %}

{% block body %}
    <h1>Bloc</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ bloc.id }}</td>
            </tr>
            <tr>
                <th>Type_bloc</th>
                <td>{{ bloc.typeBloc }}</td>
            </tr>
            <tr>
                <th>Position</th>
                <td>{{ bloc.position }}</td>
            </tr>
            <tr>
                <th>Titre</th>
                <td>{{ bloc.titre }}</td>
            </tr>
            <tr>
                <th>Contenu_json</th>
                <td>{{ bloc.contenuJson ? bloc.contenuJson|json_encode : '' }}</td>
            </tr>
            <tr>
                <th>Created_at</th>
                <td>{{ bloc.createdAt ? bloc.createdAt|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>Updated_at</th>
                <td>{{ bloc.updatedAt ? bloc.updatedAt|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_bloc_index') }}">back to list</a>

    <a href="{{ path('app_bloc_edit', {'id': bloc.id}) }}">edit</a>

    {{ include('bloc/_delete_form.html.twig') }}
{% endblock %}
