# Utiliser PHP 8.3 avec FPM
FROM php:8.3-fpm

WORKDIR /var/www/symfony

# Installer dépendances système et extensions PHP
RUN apt-get update && apt-get install -y \
    git unzip libzip-dev zip libicu-dev libxml2-dev \
    libonig-dev curl nginx supervisor \
    && docker-php-ext-install pdo pdo_mysql intl opcache zip mbstring

# Installer Composer
COPY --from=composer:2 /usr/bin/composer /usr/bin/composer

# Copier le code du projet
COPY . .

# Installer les dépendances PHP
RUN composer install --no-interaction --no-progress --prefer-dist

# Supprimer le serveur PHP intégré, on utilisera Nginx + PHP-FPM
EXPOSE 8000
