# --- Backend Symfony (DEV) ---
FROM php:8.3-cli

WORKDIR /var/www/symfony

# Installer dépendances système et extensions PHP courantes
RUN apt-get update && apt-get install -y \
    git unzip libpq-dev libzip-dev zip libicu-dev libxml2-dev \
    && docker-php-ext-install pdo pdo_mysql intl opcache zip

# Installer Composer
COPY --from=composer:2 /usr/bin/composer /usr/bin/composer

# Copier les fichiers du projet Symfony
COPY . .

# Installer les dépendances PHP sans interaction
RUN composer install --no-interaction --no-progress --prefer-dist

# Exposer le port du serveur Symfony
EXPOSE 8000

# Lancer le serveur Symfony pour le développement
CMD ["php", "-S", "0.0.0.0:8000", "-t", "public"]
